<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/darker_gray">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tempButton"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:text="Test" />


    <Button
        android:id="@+id/tempButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lightOff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="Get Temperature" />

    <Button
        android:id="@+id/lightOn"
        android:layout_width="97dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dip"
        android:text="Light On" />

    <Button
        android:id="@+id/lightOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dip"
        android:text="Light Off" />

    <Switch
        android:id="@+id/simpleSwitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lightOn"
        android:layout_marginTop="28dp"
        android:checked="false"
        android:showText="true"
        android:splitTrack="false"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/simpleSwitch1"
        android:layout_alignBottom="@+id/simpleSwitch1"
        android:layout_alignStart="@+id/textView"
        android:text="LED I:"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>